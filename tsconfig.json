{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "listFiles": true,
    "noEmitOnError": true
  },
  "exclude": []
}
